<?xml version="1.0" encoding="UTF-8"?>
<!-- <H3> Find and collect scenario </H3> Starts the find and collect scenario. -->
<applicationtype xmlns="http://jadex.sourceforge.net/jadex-application"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-application
						http://jadex.sourceforge.net/jadex-application-2.0.xsd"
	name="findNCollect" package="jadex.scenario">

	<arguments>
		<argument name="port" typename="Integer"> 6665 </argument>
		<argument name="host" typename="String"> "localhost" </argument>
	</arguments>

	<componenttypes>
		<componenttype name="Explore0" filename="jadex/agent/ExploreAgent.class"
			master="true" />
		<componenttype name="Collect0" filename="jadex/agent/CollectAgent.class"
			master="true" />
		<componenttype name="Follow0" filename="jadex/agent/FollowAgent.class"
			master="true" />
	</componenttypes>

	<applications>
		
		<application name="2 Robots, 4 Rooms">
			<components>
				<component type="Explore0" name="Explore0">
					<arguments>
						<argument name="port"> 6669 </argument>
						<argument name="host"> $args.host </argument>
						<argument name="index"> 2 </argument>
					</arguments>
				</component>
				<component type="Collect0" name="Collect0">
					<arguments>
						<argument name="port"> $args.port </argument>
						<argument name="host"> $args.host </argument>
						<argument name="index"> 0 </argument>
						<argument name="X"> 5.0 </argument>
						<argument name="Y"> 5.0 </argument>
					</arguments>
				</component>
			</components>
		</application>

		<application name="2 Robots, Tams floor">
			<components>
				<component type="Explore0" name="Explore0">
					<arguments>
						<argument name="port"> $args.port+4 </argument>
						<argument name="host"> $args.host </argument>
						<argument name="index"> 2 </argument>
						<argument name="X"> -17.0 </argument>
						<argument name="Y"> -1.5 </argument>
						<!--<argument name="Angle"> 180.0 </argument>-->
					</arguments>
				</component>
				<component type="Collect0" name="Collect0">
					<arguments>
						<argument name="port"> $args.port+2 </argument>
						<argument name="host"> $args.host </argument>
						<argument name="index"> 0 </argument>
						<argument name="X"> -25.0 </argument>
						<argument name="Y"> 3.5 </argument>
						<!--<argument name="Angle"> -90.0 </argument>-->
					</arguments>
				</component>
			</components>
		</application>

		<application name="2 Robots, Tams floor Real">
			<components>
				<component type="Explore0" name="Explore0">
					<arguments>
						<argument name="port"> $args.port+4 </argument>
						<argument name="host"> "localhost" </argument>
						<argument name="index"> 2 </argument>
					</arguments>
				</component>
				<component type="Collect0" name="Collect0">
					<arguments>
						<argument name="port"> $args.port </argument>
						<argument name="host"> $args.host </argument>
						<argument name="index"> 0 </argument>
					</arguments>
				</component>
			</components>
		</application>

	</applications>

</applicationtype>
